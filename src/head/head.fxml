<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="head.Controller">
   <top>
      <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <items>
            <ComboBox fx:id="planeCombo" onAction="#changeView" prefWidth="150.0" promptText="Plane" />
            <Label fx:id="sliceLbl" text="Slice" />
            <Slider fx:id="sliceSlide" blockIncrement="1.0" max="112.0" onMouseDragged="#changeSlice" />
            <Label fx:id="zoomLbl" text="Zoom" />
            <Slider fx:id="zoomSlide" blockIncrement="0.1" majorTickUnit="0.1" max="2.0" min="0.5" onMouseReleased="#changeZoom" value="1.0" />
            <Button fx:id="mipBtn" mnemonicParsing="false" onAction="#mipButtonClicked" text="MIP" />
        </items>
      </ToolBar>
   </top>
   <center>
      <ScrollPane hbarPolicy="ALWAYS" prefHeight="200.0" prefWidth="200.0" vbarPolicy="ALWAYS" BorderPane.alignment="CENTER">
         <content>
            <ImageView fx:id="medicalImage" fitHeight="500.0" fitWidth="500.0" pickOnBounds="true" preserveRatio="true" />
         </content>
      </ScrollPane>
   </center>
</BorderPane>
